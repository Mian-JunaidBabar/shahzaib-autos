# ==========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ==========================================
# Copy these to your deployment platform (Vercel, Railway, etc.)
# Replace all placeholder values with your actual credentials

# ==========================================
# ENVIRONMENT
# ==========================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com

# ==========================================
# DATABASE (PostgreSQL via Supabase)
# ==========================================
# Get from: Supabase → Settings → Database → Connection String
# Use the "Connection Pooling" URL for better performance
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-1-ap-south-1.pooler.supabase.com:5432/postgres?sslmode=require"
DIRECT_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-1-ap-south-1.pooler.supabase.com:5432/postgres?sslmode=require"

# ==========================================
# SUPABASE AUTHENTICATION
# ==========================================
# Get from: Supabase → Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://[PROJECT-REF].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ==========================================
# BETTER AUTH (Session Management)
# ==========================================
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-32-char-secret-here

# ==========================================
# ADMIN USER (for initial seed)
# ==========================================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=SecurePassword123!
ADMIN_NAME=Admin Name

# ==========================================
# CLOUDINARY (Image Management)
# ==========================================
# Get from: Cloudinary → Dashboard → API Keys
# Server-side (keep secret)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=AbCdEfGhIjKlMnOpQrStUvWxYz

# Client-side (safe to expose)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your-unsigned-preset

# ==========================================
# WHATSAPP (Customer Communication)
# ==========================================
# Your business WhatsApp number
NEXT_PUBLIC_WHATSAPP_NUMBER=923001234567
WHATSAPP_BUSINESS_PHONE=+92 300 1234567

# ==========================================
# EMAIL (Resend Transactional Emails)
# ==========================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_AbCdEfGh_1234567890

# ==========================================
# LOGGING & MONITORING
# ==========================================
PRISMA_LOG_LEVEL=warn
LOG_LEVEL=info
