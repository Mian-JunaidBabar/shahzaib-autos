# ==========================================
# DATABASE (PostgreSQL via Supabase or direct)
# ==========================================
# Direct connection to PostgreSQL database
# Use DIRECT_URL for Prisma Postgres adapter (bypasses pgbouncer)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"
DIRECT_URL="postgresql://user:password@host:5432/database?sslmode=require"

# ==========================================
# SUPABASE (Authentication & Database)
# ==========================================
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# Service role key for admin operations (keep secret!)
# Required for: Team invitations, admin user management
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ==========================================
# CLOUDINARY (Image Upload & Management)
# ==========================================
# Server-side credentials (keep secret!)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Public credentials for client-side uploads
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET="your-unsigned-upload-preset"

# ==========================================
# WHATSAPP (Customer Communication)
# ==========================================
# WhatsApp number for customer checkout (include country code, no + or spaces)
# Example: 923001234567 for Pakistan
NEXT_PUBLIC_WHATSAPP_NUMBER="923001234567"

# Business phone for notifications (with + and spaces allowed)
# Example: +92 300 1234567
WHATSAPP_BUSINESS_PHONE="+92 300 1234567"

# ==========================================
# EMAIL (Resend for transactional emails)
# ==========================================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY="re_your_api_key"

# ==========================================
# ENVIRONMENT
# ==========================================
# Set to "production" for production deployments
NODE_ENV="development"
